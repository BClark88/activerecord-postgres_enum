# frozen_string_literal: true

if RUBY_VERSION < "2.7"
  appraise "Rails 5.0" do
    gem "rails", ">= 5.0", "< 5.1"
  end

  appraise "Rails 5.1" do
    gem "rails", ">= 5.1", "< 5.2"
  end

  appraise "Rails 5.2" do
    gem "rails", ">= 5.2", "< 5.3"
  end
end

appraise "Rails 6.0" do
  gem "rails", ">= 6.0", "< 6.1"
end

appraise "Rails 6.1" do
  gem "rails", ">= 6.1", "< 6.2"
end
